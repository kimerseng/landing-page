<!-- Header -->
<div class="container mx-auto px-4">
    <!-- Header -->
    <header class=" top-0 z-50 bg-black text-white px-6 py-4 border-b border-gray-800">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center space-x-2">
          <%= image_tag 'logo.png', alt: 'Hang Meas Logo', class: 'w-20 h-20 object-contain rounded-full' %>
        </div>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex space-x-8 justify-center flex-1">
          <a href="#features" class="hover:text-[#F59B1D]">Features</a>
          <a href="#how-it-works" class="hover:text-[#F59B1D]">How It Works</a>
          <a href="#download" class="hover:text-[#F59B1D]">Download</a>
        </nav>

        <!-- Desktop Button -->
        <div class="hidden md:block">
          <%= link_to '#download' do %>
            <button class="bg-[#F59B1D] px-6 py-3 rounded-full font-semibold hover:opacity-90">Get Started</button>
          <% end %>
        </div>

        <!-- Hamburger Button -->
        <button id="menu-btn" class="md:hidden focus:outline-none">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden flex flex-col mt-4 bg-white rounded-lg text-black shadow-lg md:hidden">
        <a href="#features" class="py-2 px-4 hover:bg-gray-100 hover:text-[#F59B1D]">Features</a>
        <a href="#how-it-works" class="py-2 px-4 hover:bg-gray-100 hover:text-[#F59B1D]">How It Works</a>
        <a href="#download" class="py-2 px-4 hover:bg-gray-100 hover:text-[#F59B1D]">Download</a>
        <%= link_to '#download' do %>
          <div class="mt-2 w-full py-2 px-6 text-center font-semibold text-white bg-[#F59B1D] hover:opacity-90 rounded-b-lg transition">
            Get Started
          </div>
        <% end %>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="bg-black text-white py-20 px-6 container mx-auto">
      <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="space-y-6">
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            Your All-in-One Entertainment App
          </h1>
          <p class="text-base sm:text-lg md:text-xl text-gray-300 leading-relaxed">
            Discover and book concerts, festivals, and live events—right from your phone.
          </p>
      
          <%= link_to '#download' do %>
            <button class="bg-[#F59B1D] px-6 py-3 rounded-full font-semibold text-lg hover:bg-[#E8901A] transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 mt-5">
              Download Now
            </button>
          <% end %>
        </div>

        <!-- Right Content - App Mockup -->
        <div class="flex justify-center">
          <div class="relative w-full max-w-md md:max-w-lg lg:max-w-xl">
            <%= image_tag 'hang mean landing page app 2.png', alt: 'App Mockup', class: 'w-full h-auto object-contain' %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-lg"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="bg-black text-white py-20 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4">
          Experience Entertainment Like Never Before
        </h2>
        <p class="text-base sm:text-lg md:text-xl">
          Explore powerful features that make HangMeas your go-to event ticketing app
        </p>
      
        </div>
    
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 text-center">
          <% features = [
            { title: "Easy Event Discovery", description: "Browse concerts and shows happening near you.", image: "Easy Event Discovery.png" },
            { title: "Venue & Event Info", description: "Get event details, timing, and locations instantly.", image: "Venue & Event Info.png" },
            { title: "Secure Ticket Booking", description: "Fast checkout with reliable confirmation.", image: "Secure Ticket Booking.png" },
            { title: "Fast & Flexible Payments", description: "Pay via ABA KHQR and Credit/Debit cards", image: "Fast & Flexible Payments.png" },
            { title: "All Your Tickets in One Place", description: "Access upcoming, past, or cancelled bookings with ease.", image: "All Your Tickets in One Place.png" },
            { title: "Instant Ticket Access", description: "Your ticket is ready as soon as payment completes.", image: "Instant Ticket Access.png" }
          ] %>
    
          <% features.each do |feature| %>
            <div class="rounded-3xl overflow-hidden transition duration-300">
              <%= image_tag feature[:image], alt: feature[:title], class: "w-full h-100 object-cover" %>
              <div class="p-6 text-center">
                <h3 class="text-xl font-bold mb-2"><%= feature[:title] %></h3>
                <p class="text-gray-300 leading-relaxed"><%= feature[:description] %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
    
    <!-- How It Works Section -->
    <section id="how-it-works" class="bg-black text-white py-20 px-6 container mx-auto">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4">
            Your Journey to Live Entertainment
          </h2>
        </div>
    
        <div class="grid md:grid-cols-3 gap-6">
          <% steps = [
            { number: "1", title: "Discover Events", description: "Browse through exciting concerts, festivals, and live events happening near you." },
            { number: "2", title: "Book Your Tickets", description: "Select your preferred seats and complete your booking with secure payment options." },
            { number: "3", title: "Enjoy the Experience", description: "Show your digital ticket and immerse yourself in unforgettable live entertainment." }
          ] %>
    
          <% steps.each do |step| %>
            <div class="text-center group bg-[#F59B1D]/10 rounded-3xl px-4 py-3 border border-white/30 transition-transform duration-300">
              <div class="mb-6">
                <div class="w-0 h-20 bg-[#F59B1D] rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="w-14 h-14 flex items-center p-6 justify-center bg-[#F59B1D] text-2xl font-bold rounded-full mx-auto">
                    <%= step[:number] %>
                  </span>
                </div>
              </div>
              <h3 class="text-2xl font-bold mb-2"><%= step[:title] %></h3>
              <p class="text-gray-300 leading-relaxed"><%= step[:description] %></p>
            </div>
          <% end %>
        </div>
      </div>
    </section>

    <!-- Download Section -->
    <section id="download" class="py-20 px-6 text-center  ">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-8">
        Ready to Experience the Difference?
      </h2>
      <p class="mb-10 text-base sm:text-lg md:text-xl">
        Download Hang Meas Mobile App today and start your journey towards greater efficiency and success.
      </p>
  
      <div class="flex flex-col md:flex-row justify-center items-center gap-4">
        <a href="https://apps.apple.com/" target="_blank" rel="noopener">
          <img src="https://developer.apple.com/assets/elements/badges/download-on-the-app-store.svg" alt="App Store" class="h-14" />
        </a>
        <a href="https://play.google.com/store" target="_blank" rel="noopener">
          <img src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg" alt="Google Play" class="h-14" />
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="text-center py-8 border-t border-gray-800 text-sm">
      <p>© 2025 Hang Meas Mobile. All rights reserved.</p>
      <div class="mt-2 flex justify-center space-x-4">
        <%= link_to 'Privacy Policy', privacy_path, class: 'hover:text-[#F59B1D]' %>
        <%= link_to 'Terms of Service', terms_path, class: 'hover:text-[#F59B1D]' %>
      </div>
    </footer>
    
</div>

<!-- JavaScript for mobile menu toggle -->
<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>
